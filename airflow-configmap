apiVersion: apps/v1
kind: Deployment
metadata:
  name: confmap-airflow
  labels:
    name: confmap-airflow
spec:
  replicas: 1
  selector:
    matchLabels: 
      name: confmap-airflow
  template:
    metadata:
      labels:
        name: confmap-airflow
    spec:
      containers:
      - name: confmap-airflow
        image: "puckel/docker-airflow:1.10.9"
        env:
        - name: api_key
          valueFrom:
            configMapKeyRef:
              name: fullname-config
              key: fullname

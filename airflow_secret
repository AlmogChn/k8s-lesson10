apiVersion: apps/v1
kind: Deployment
metadata:
  name: secret_airflow
  labels:
    name: secret_airflow
spec:
  replicas: 1
  selector:
    matchLabels: 
      name: secret_airflow
  template:
    metadata:
      labels:
        name: secret_airflow
    spec:
      containers:
      - name: secret_airflow
        image: "puckel/docker-airflow:1.10.9"
        env:
        - name: api_key
          valueFrom:
            secretKeyRef:
              name: apiname
              key: api_name
